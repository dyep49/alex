<!DOCTYPE html>
<html ng-app='main'>
<head>
  <title>Trolly</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <!-- <script src="https://cdn.embed.ly/jquery.embedly-3.1.1.min.js" type="text/javascript"></script> -->
</head>
<body class='container' style='padding:0;background-color:lightgrey;'>

    <nav ng-controller='nav' class="navbar navbar-default" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Trolly</a>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav" style='padding-left: 1.3em;'>
            <li>
                <a href="/#/dash">Dash</a>
            </li>
            <li id="inbox">
              <a id='inboxA' href="/#/inbox">
                Inbox ({{inboxCount.length}})
              </a>
            </li>
            <li>
                <a href="/logout">Logout</a>
            </li>
          </ul>
          <form class="navbar-form navbar-right" role="search">
            <div class="form-group">
              <input ng-model='formData.search' type="text" class="form-control" placeholder="Search"/>
            </div>
            <button ng-click='searchPins()' type="submit" class="btn btn-default">
                Submit
            </button>
          </form>
        </div>
      </div>
    </nav>

  <div style='height: 2.2em;'>    
    <p class="notice devise"><%= notice %></p>
    <p class="alert devise"><%= alert %></p>
  </div>

  <%= yield %>

</body>
</html>

<script type="text/javascript">
 $(".devise").fadeOut(4000);
</script>